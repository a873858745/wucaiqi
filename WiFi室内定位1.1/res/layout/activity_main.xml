<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WifiTesterActivity"
    android:background="@drawable/img1"
     >

    <Button
        android:id="@+id/btn_addpostion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:text="添加参考点信息" />

    <Button
        android:id="@+id/btn_scanWifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn_addpostion"
        android:layout_marginTop="55dp"
        android:textStyle="bold"
        android:text="扫描附近的WIFI" />

    <Button
        android:id="@+id/btn_getLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/btn_testData"
        android:layout_below="@id/btn_addpostion"
        android:layout_marginTop="38dp"
        android:textStyle="bold"
        android:text="选择定位算法"
         />

    <Button
        android:id="@+id/btn_dbpos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_scanWifi"
        android:layout_marginTop="21dp"
        android:textStyle="bold"
        android:text="获取数据库中的位置信息" />
    <Button
        android:id="@+id/btn_testData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/btn_dbpos"
        android:textStyle="bold"
        android:text="获取实验数据" />
    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="注册" />
    <Button
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:text="退出" />

    <Button
        android:id="@+id/btn_deleteTestData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_register"
        android:layout_alignLeft="@+id/btn_testData"
        android:textStyle="bold"
        android:text="删除实验数据" />
	 <!-- 
	 <Button
        android:id="@+id/btn_addOnlineLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_addpostion"
        android:layout_alignParentLeft="true"
        android:text="添加定位点" />
	  -->

    
</RelativeLayout>
